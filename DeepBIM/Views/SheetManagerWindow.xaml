<Window x:Class="DeepBIM.Views.SheetManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DBTool - Change Sheet Name / Sheet Number"
        Height="720" Width="1120"
        WindowStartupLocation="CenterOwner"
        FontFamily="Segoe UI" Background="#FFF7F5F2">

    <!-- Theme resources -->
    <Window.Resources>
        <SolidColorBrush x:Key="Accent" Color="#D9A441"/>
        <SolidColorBrush x:Key="AccentDark" Color="#B07F21"/>
        <Style x:Key="PanelHeader" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
        </Style>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#FFE9E6E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
        <!-- Icon button using Segoe MDL2 Assets -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0 6"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ToolTipService.ShowDuration" Value="60000"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{StaticResource AccentDark}"/>
        </Style>

        <!-- DataGrid style -->
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="BorderBrush" Value="#FFE9E6E2"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <!-- LEFT: Sheet list + search -->
        <Border Grid.RowSpan="2" Style="{StaticResource Card}" Margin="0 0 10 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <Border Style="{StaticResource PanelHeader}">
                        <TextBlock Text="Tất cả Sheets" FontWeight="SemiBold" Foreground="White"/>
                    </Border>

                    <DockPanel Margin="0 10 0 6">
                        <TextBox x:Name="SearchBox" Height="32" VerticalAlignment="Center"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Tìm kiếm Sheet. Nhấn Enter để áp dụng tìm kiếm."
                                 KeyDown="SearchBox_KeyDown"
                                 Padding="10" />
                    </DockPanel>

                    <CheckBox Content=" - Chọn tất cả Sheets - "
                              IsChecked="{Binding SelectAll, Mode=TwoWay}"
                              Margin="4 0 0 8" />
                </StackPanel>

                <ListBox Grid.Row="1" ItemsSource="{Binding SheetsView}"
                         SelectionMode="Extended"
                         SelectedItems="{Binding SelectedSheets, Mode=TwoWay}"
                         BorderThickness="0" Margin="0 4 0 0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" Margin="6 0"/>
                                <TextBlock Text="{Binding Display}" VerticalAlignment="Center" Margin="6 0"/>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- MIDDLE: vertical icon buttons -->
        <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
            <!-- Copy current -> new -->
            <Button Style="{StaticResource IconButton}" Content="&#xE8C8;"
                    ToolTip="Sao chép Sheet Number/Name hiện tại sang cột mới"
                    Command="{Binding CopyCurrentToNewCommand}"/>
            <!-- Move up -->
            <Button Style="{StaticResource IconButton}" Content="&#xE110;"
                    ToolTip="Di chuyển lên"
                    Command="{Binding MoveUpCommand}"/>
            <!-- Move down -->
            <Button Style="{StaticResource IconButton}" Content="&#xE111;"
                    ToolTip="Di chuyển xuống"
                    Command="{Binding MoveDownCommand}"/>
            <!-- Clear new values -->
            <Button Style="{StaticResource IconButton}" Content="&#xE107;"
                    ToolTip="Xóa cột mới"
                    Command="{Binding ClearNewValuesCommand}"/>
            <!-- Refresh -->
            <Button Style="{StaticResource IconButton}" Content="&#xE72C;"
                    ToolTip="Làm mới danh sách"
                    Command="{Binding RefreshCommand}"/>
        </StackPanel>

        <!-- RIGHT/TOP: Data grid -->
        <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Style="{StaticResource PanelHeader}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Sheet Number hiện tại" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Sheet Number mới" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Sheet Name hiện tại" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="Sheet Name mới" Foreground="White" FontWeight="SemiBold"/>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Rows}"
                          IsReadOnly="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding CurrentNumber}" Header=""/>
                        <DataGridTextColumn Binding="{Binding NewNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header=""/>
                        <DataGridTextColumn Binding="{Binding CurrentName}" Header=""/>
                        <DataGridTextColumn Binding="{Binding NewName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header=""/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- RIGHT/BOTTOM: config + action buttons -->
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <!-- Phạm vi áp dụng -->
            <Border Style="{StaticResource Card}" Margin="0 10 10 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Style="{StaticResource PanelHeader}">
                        <TextBlock Text="Phạm vi áp dụng" FontWeight="SemiBold" Foreground="White"/>
                    </Border>
                    <StackPanel Grid.Row="1" Margin="6">
                        <RadioButton Content="Toàn bộ dự án" IsChecked="{Binding ScopeAll, Mode=TwoWay}"/>
                        <RadioButton Content="Lựa chọn hiện tại" IsChecked="{Binding ScopeSelection, Mode=TwoWay}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Sắp xếp thứ tự -->
            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="0 10 10 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Style="{StaticResource PanelHeader}">
                        <TextBlock Text="Sắp xếp thứ tự bản vẽ" FontWeight="SemiBold" Foreground="White"/>
                    </Border>
                    <Grid Grid.Row="1" Margin="6" ColumnDefinitions="Auto,10,*,10,*,10,Auto">
                        <TextBlock VerticalAlignment="Center" Text="Tiền tố:"/>
                        <TextBox Grid.Column="2" Text="{Binding SortPrefix}" Height="28"/>
                        <TextBlock Grid.Column="4" VerticalAlignment="Center" Text="Số bắt đầu:"/>
                        <TextBox Grid.Column="6" Text="{Binding SortStart}" Width="80" Height="28"/>
                    </Grid>
                    <Button Grid.Row="1" Content="Sắp Xếp Thứ Tự" HorizontalAlignment="Left" Margin="6,52,0,0" Width="150"
                            Command="{Binding SortCommand}"/>
                </Grid>
            </Border>

            <!-- Quy tắc đặt tên tự động -->
            <Border Grid.Column="2" Style="{StaticResource Card}" Margin="0 10 10 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Style="{StaticResource PanelHeader}">
                        <TextBlock Text="Quy tắc đặt tên tự động" FontWeight="SemiBold" Foreground="White"/>
                    </Border>

                    <Grid Grid.Row="1" Margin="8" RowDefinitions="Auto,8,Auto,8,Auto">
                        <!-- Prefix / Suffix -->
                        <Grid ColumnDefinitions="Auto,8,*,16,Auto,8,*">
                            <TextBlock Text="Thêm tiền tố:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Text="{Binding AddPrefix}" Height="28"/>
                            <TextBlock Grid.Column="4" Text="Thêm hậu tố:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="6" Text="{Binding AddSuffix}" Height="28"/>
                        </Grid>

                        <!-- Find / Replace -->
                        <Grid Grid.Row="2" ColumnDefinitions="Auto,8,*,16,Auto,8,*">
                            <TextBlock Text="Tìm giá trị:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="2" Text="{Binding FindValue}" Height="28"/>
                            <TextBlock Grid.Column="4" Text="Thay thế bằng:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="6" Text="{Binding ReplaceValue}" Height="28"/>
                        </Grid>

                        <!-- Target -->
                        <Grid Grid.Row="4" ColumnDefinitions="Auto,*,Auto,*" Margin="0,6,0,0">
                            <RadioButton Content="Sheet Number" IsChecked="{Binding RuleTargetIsNumber}" />
                            <RadioButton Grid.Column="2" Content="Sheet Name" IsChecked="{Binding RuleTargetIsName}" />
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- Action buttons -->
            <StackPanel Grid.Column="3" Orientation="Vertical" Margin="0 10 0 0">
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Phím chức năng" FontWeight="SemiBold" Margin="0 0 0 8"/>
                        <Button Content="Áp Dụng Quy Tắc" Height="40" Margin="0 0 0 8"
                                Command="{Binding ApplyRulesCommand}"/>
                        <Button Content="Đổi Tên" Height="40"
                                Command="{Binding RenameSheetsCommand}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
