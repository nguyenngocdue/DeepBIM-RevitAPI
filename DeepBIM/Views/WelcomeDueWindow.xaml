<Window x:Class="DeepBIM.Views.WelcomeDueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="DeepBIM – Welcome" Height="520" Width="880"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <!-- ==== THEME / RESOURCES ==== -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- v5: MaterialDesign2 -->
                <materialDesign:BundledTheme BaseTheme="Light"
                                             PrimaryColor="DeepPurple"
                                             SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Local text styles -->
            <Style x:Key="Headline" TargetType="TextBlock"
                   BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>

            <Style x:Key="Subtle" TargetType="TextBlock"
                   BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
                <Setter Property="Opacity" Value="0.75"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- ==== LAYOUT ==== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- AppBar -->
            <RowDefinition/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- StatusBar -->
        </Grid.RowDefinitions>

        <!-- ==== TOP APP BAR ==== -->
        <DockPanel Grid.Row="0" LastChildFill="True"
                   Background="{DynamicResource PrimaryHueMidBrush}"
                   Height="56">
            <Button DockPanel.Dock="Left"
                    Style="{StaticResource MaterialDesignToolForegroundButton}"
                    ToolTip="Settings"
                    Margin="8,0">
                <materialDesign:PackIcon Kind="Cog" Width="22" Height="22"/>
            </Button>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                <materialDesign:PackIcon Kind="CubeOutline" Width="26" Height="26" Foreground="White" Margin="8,0"/>
                <TextBlock Text="DeepBIM"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                <Button Style="{StaticResource MaterialDesignToolForegroundButton}"
                        ToolTip="Help" Margin="0,0,8,0">
                    <materialDesign:PackIcon Kind="HelpCircleOutline" Width="22" Height="22"/>
                </Button>
                <Button Style="{StaticResource MaterialDesignToolForegroundButton}"
                        ToolTip="About">
                    <materialDesign:PackIcon Kind="InformationOutline" Width="22" Height="22"/>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- ==== CENTER CONTENT ==== -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Hero -->
            <StackPanel Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="24">
                <TextBlock Text="Welcome back, Due 👋" Style="{StaticResource Headline}"/>
                <TextBlock Text="Sign in to continue to your BIM workspace."
                           Style="{StaticResource Subtle}"/>
            </StackPanel>

            <!-- Card -->
            <Border Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center"
                    Margin="24" Padding="24"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    CornerRadius="16"
                    >
                <Grid Width="520">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Username -->
                    <TextBox Grid.Row="0" Grid.ColumnSpan="2"
                             Margin="0,0,0,12"
                             materialDesign:HintAssist.Hint="Email or Username"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>

                    <!-- Password -->
                    <PasswordBox Grid.Row="1" Grid.ColumnSpan="2"
                                 Margin="0,0,0,12"
                                 materialDesign:HintAssist.Hint="Password"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>

                    <!-- Options -->
                    <CheckBox Grid.Row="2" Content="Remember me"
                              VerticalAlignment="Center"/>
                    <Button Grid.Row="2" Grid.Column="1" Content="Forgot password?"
                            HorizontalAlignment="Right"
                            Style="{StaticResource MaterialDesignFlatButton}"/>

                    <!-- Actions -->
                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Content="Sign in"
                                Width="120" Margin="0,0,12,0"
                                Command="{x:Static ApplicationCommands.NotACommand}"
                                />
                        <Button Content="Create account" Width="150"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>

                    <!-- Divider + Secondary action -->
                    <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="0,16,0,0">
                        <Separator Margin="0,8"/>
                        <Button Content="Continue without login"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ==== STATUS BAR ==== -->
        <StatusBar Grid.Row="2" Background="{DynamicResource MaterialDesignPaper}">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Information" Width="18" Height="18" Margin="0,0,6,0"/>
                    <TextBlock Text="Tip: You can change theme colors in App.xaml via BundledTheme."/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="v1.0.0" Opacity="0.7"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
