<Window x:Class="DeepBIM.Views.SelectColumnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeepBIM.Views"
        mc:Ignorable="d"
        Title="SelectColumnWindow" Height="450" Width="800">
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Select Columns" Click="Button_Click" Height="30" />

        <ListView Grid.Row="1" ItemsSource="{Binding SelectedColumns}" Margin="0,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Element ID" DisplayMemberBinding="{Binding Id}" Width="100"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
