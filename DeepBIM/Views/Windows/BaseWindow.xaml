<Window x:Class="DeepBIM.Views.Windows.BaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="#FFF7F5F2"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterOwner"
        Width="1200" Height="800">

    <Window.Resources>
        <!-- Đặt các brush/style dùng chung tại đây -->
        <SolidColorBrush x:Key="Accent" Color="#3FDCCB"/>
        <SolidColorBrush x:Key="AccentDark" Color="#2FB3A5"/>
        <SolidColorBrush x:Key="CardBorder" Color="#D6F5F2"/>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="HeaderBar" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <!-- ... bạn có thể move thêm các Style khác vào đây ... -->
    </Window.Resources>

    <Grid>
        <!-- Header chung -->
        <Border Background="{StaticResource Accent}" Padding="10">
            <DockPanel>
                <TextBlock Text="{Binding WindowTitle, RelativeSource={RelativeSource AncestorType=Window}}"
                           Foreground="White" FontWeight="SemiBold" FontSize="14"/>
            </DockPanel>
        </Border>

        <!-- Nội dung con sẽ “điền” vào đây -->
        <ContentPresenter x:Name="PART_Body"
                          Margin="10"
                          Grid.Row="1"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
