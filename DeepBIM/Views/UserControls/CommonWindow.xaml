<UserControl x:Class="DeepBIM.Views.UserControls.CommonWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeepBIM.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header: Logo + Title + Function Button -->
            <Border Grid.Row="0" Background="#F0F8FF" BorderBrush="#D6F5F2" BorderThickness="0,0,0,1" Padding="12" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo -->
                    <Image Grid.Column="0" Source="{Binding Logo, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Width="24" Height="24" VerticalAlignment="Center" 
                           Visibility="{Binding Logo, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}"/>

                    <!-- Title -->
                    <TextBlock Grid.Column="1" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                               VerticalAlignment="Center" Margin="12,0,0,0" 
                               FontWeight="SemiBold" FontSize="16" Foreground="#333"/>

                    <!-- Function Button -->
                    <Button Grid.Column="2" 
                            Content="{Binding FunctionText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                            Command="{Binding FunctionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource ActionButton}" 
                            Padding="12,4" 
                            Visibility="{Binding FunctionCommand, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource NullToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- Nội dung con (sẽ được gán từ bên ngoài) -->
            <ContentPresenter Grid.Row="1" Margin="12" />
        </Grid>
    </Border>
</UserControl>