<Window x:Class="DeepBIM.Views.SheetCreatetionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeepBIM.Views"
        mc:Ignorable="d"
        Title="Create Sheets From Excel" Height="450" Width="800">
    
   



    <Grid Margin="10">
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <GroupBox Header="Input" Grid.Row="0" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <!-- Label column -->
                    <ColumnDefinition Width="*"/>
                    <!-- Input column -->
                </Grid.ColumnDefinitions>

                <!-- Directory -->
                <Label Content="Directory:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0">
                    <TextBox x:Name="txtDirectory" Margin="0,0,5,0" MinWidth="300" Width="559"/>
                    <Button 
                        Content="Browse..." Padding="5" 
                        Background="#FF99CC00" 
                        Foreground="White" 
                        Click="BrowseExcelButton_Click"/>
                </StackPanel>

                <!-- Family -->
                <Label Content="Family:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbFamily" 
                      Grid.Row="1" Grid.Column="1" 
                      Margin="5,0,0,0" 
                      HorizontalAlignment="Stretch" 
                      MinWidth="300"
                      DisplayMemberPath="Name" 
                      SelectedIndex="0"
                      SelectionChanged="cmbFamily_SelectionChanged"
                 />

                <!-- Type Name -->
                <Label Content="Type Name:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbTypeName" 
                      Grid.Row="2" Grid.Column="1" 
                      Margin="5,0,0,0" 
                      HorizontalAlignment="Stretch" 
                      MinWidth="300"/>
            </Grid>
        </GroupBox>

        <!-- Excel Data Table -->
        <GroupBox Header="Excel data table" Grid.Row="1" Margin="0,0,0,10" Padding="10">
            <DataGrid 
                    x:Name="excelDataTable" 
                    AutoGenerateColumns="True" 
                    IsReadOnly="True"
                    CanUserAddRows="False" 
                    CanUserDeleteRows="False"
                    HeadersVisibility="All" 
                    Margin="5" 
                    AlternatingRowBackground="#F0F0F0"
                    MaxHeight="200" 
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto"/>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,10,0,0">
            <Button Content="Create"  Click="CreateButton_Click"/>
            <Button Content="Update" Padding="10" Background="#FF99CC00" Foreground="White" Click="UpdateButton_Click"/>
            <Button Content="Cancel" Padding="10" Background="#FF99CC00" Foreground="White" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>