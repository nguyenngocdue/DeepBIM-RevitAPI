<Window x:Class="DeepBIM.Views.TagFramingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Tag Framings" Height="560" Width="880"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">


    <!-- ==== THEME / RESOURCES ==== -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- v5: MaterialDesign2 -->
                <materialDesign:BundledTheme BaseTheme="Light"
                                          PrimaryColor="DeepPurple"
                                          SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Local text styles -->
            <Style x:Key="Headline" TargetType="TextBlock"
                BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>

            <Style x:Key="Subtle" TargetType="TextBlock"
                BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
                <Setter Property="Opacity" Value="0.75"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <!-- panel trái -->
            <ColumnDefinition Width="16"/>
            <ColumnDefinition/>
            <!-- panel phải -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ========= LEFT: Steps / Select Framings ========= -->
        <StackPanel Grid.Column="0" Grid.Row="0">
            <!-- Step 1 -->
            <Border Background="{DynamicResource MaterialDesignCardBackground}" CornerRadius="12" Padding="16">
                <StackPanel>
                    <TextBlock Text="1) Select Framings" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Chọn dầm/giằng/cột cần đặt Tag trong Revit."
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Opacity="0.8" Margin="0,0,0,12"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Button Content="Pick in View"
                                Command="{Binding SelectFramingsCommand}"
                                />
                        <Button Content="Clear"
                                Command="{Binding ClearSelectionCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="CheckCircleOutline" Width="18" Height="18"/>
                        <TextBlock>
                            <Run Text="Đã chọn: "/>
                            <Run Text="{Binding SelectedCount}"/>
                            <Run Text=" elements"/>
                        </TextBlock>
                    </StackPanel>

                    <Separator Margin="0,12,0,12"/>

                    <!-- Tag type -->
                    <TextBlock Text="Tag Type" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding TagTypes}"
                              SelectedItem="{Binding SelectedTagType}"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

                    <!-- View filter -->
                    <CheckBox Content="Chỉ tag các framing đang hiển thị trong view"
                              IsChecked="{Binding OnlyVisibleInView}"
                              Margin="0,12,0,0"/>
                </StackPanel>
            </Border>

            <!-- Step 2 (tuỳ chọn) -->
        </StackPanel>

        <!-- spacer -->
        <Grid Grid.Column="1"/>

        <!-- ========= RIGHT: Positioning / Preview Options ========= -->
        <Border Grid.Column="2" Grid.Row="0"
                Background="{DynamicResource MaterialDesignCardBackground}"
                CornerRadius="12" Padding="16"
                >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,8">
                    <materialDesign:PackIcon Kind="TagOutline" Width="22" Height="22" Margin="0,0,8,0"/>
                    <TextBlock Text="Tag Positioning" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                </StackPanel>

                <!-- Body -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Align group -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Align" Margin="0,0,0,6"/>

                        <UniformGrid Columns="3" Rows="2" Margin="0,0,0,8" HorizontalAlignment="Left">
                            <ToggleButton Content="Top"
                                          IsChecked="{Binding AlignTop}"
                                          />
                            <ToggleButton Content="Middle"
                                          IsChecked="{Binding AlignMiddle}"
                                          />
                            <ToggleButton Content="Bottom"
                                          IsChecked="{Binding AlignBottom}"
                                          />
                            <ToggleButton Content="Left"
                                          IsChecked="{Binding AlignLeft}"
                                          />
                            <ToggleButton Content="Center"
                                          IsChecked="{Binding AlignCenter}"
                                          />
                            <ToggleButton Content="Right"
                                          IsChecked="{Binding AlignRight}"
                                          />
                        </UniformGrid>
                    </StackPanel>

                    <!-- spacer -->
                    <Grid Grid.Column="1"/>

                    <!-- Offset / Rotation / Leader -->
                    <StackPanel Grid.Column="2">

                        <StackPanel Orientation="Horizontal"  Margin="0,0,0,4"/>

                        <StackPanel Orientation="Horizontal"  Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- ========= Footer buttons ========= -->
        <DockPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" />
        </DockPanel>
    </Grid>
</Window>