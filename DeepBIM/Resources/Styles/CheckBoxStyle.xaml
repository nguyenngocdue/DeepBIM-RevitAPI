<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Colors -->
    <Color x:Key="CheckboxBorderColor">#D0D5DD</Color>
    <!-- viền mặc định -->
    <Color x:Key="CheckboxBorderHoverColor">#7F56D9</Color>
    <!-- hover -->
    <Color x:Key="CheckboxCheckedBgColor">#7C3AED</Color>
    <!-- tím (checked) -->
    <Color x:Key="CheckboxDisabledColor">#E4E4E7</Color>
    <!-- disabled -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="CheckboxBorderBrush" Color="{StaticResource CheckboxBorderColor}"/>
    <SolidColorBrush x:Key="CheckboxBorderHoverBrush" Color="{StaticResource CheckboxBorderHoverColor}"/>
    <SolidColorBrush x:Key="CheckboxCheckedBg" Color="{StaticResource CheckboxCheckedBgColor}"/>
    <SolidColorBrush x:Key="CheckboxDisabledBrush" Color="{StaticResource CheckboxDisabledColor}"/>
    <SolidColorBrush x:Key="CheckboxTickBrush" Color="White"/>

    <!-- CheckBox Style -->
    <Style x:Key="ModernCheckBox" TargetType="CheckBox">
        <Setter Property="Foreground" Value="#344054"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Box -->
                        <Border x:Name="border"
                            Width="18" Height="18"
                            BorderBrush="{StaticResource CheckboxBorderBrush}"
                            BorderThickness="1.5"
                            CornerRadius="4"
                            Background="White"
                            VerticalAlignment="Center">
                            <!-- Tick -->
                            <Path x:Name="checkMark"
                              Data="M 4 9 L 8 13 L 14 5"
                              Stroke="{StaticResource CheckboxTickBrush}"
                              StrokeThickness="2"
                              StrokeEndLineCap="Round"
                              StrokeStartLineCap="Round"
                              StrokeLineJoin="Round"
                              Visibility="Collapsed"/>
                        </Border>

                        <!-- Label -->
                        <ContentPresenter Margin="8,0,0,0"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource CheckboxBorderHoverBrush}"/>
                        </Trigger>

                        <!-- Checked -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource CheckboxCheckedBg}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource CheckboxCheckedBg}"/>
                            <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource CheckboxDisabledBrush}"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource CheckboxDisabledBrush}"/>
                            <Setter Property="Foreground" Value="#A0A0A0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
